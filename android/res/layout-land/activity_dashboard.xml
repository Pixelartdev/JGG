<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent" >
	
    <android.support.v7.widget.Toolbar 
		xmlns:app="http://schemas.android.com/apk/res-auto"
	    android:id="@+id/toolbar"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:minHeight="?android:attr/actionBarSize"
	    android:background="@color/flat_black"
	    app:theme="@style/CustomToolbar"
	    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    
    <RelativeLayout
        android:id="@+id/content_launch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:padding="10dp" >

	<View
		android:id="@+id/center"
		android:layout_width="10dp"
		android:layout_height="10dp"
		android:layout_centerVertical="true"
		android:layout_centerHorizontal="true"
		android:background="#00000000"/>

	<RelativeLayout
		android:id="@+id/btn_news"
		android:background="@drawable/red"
		android:layout_margin="10dp"
		android:layout_toLeftOf="@+id/center"
		android:layout_above="@+id/center"
		android:layout_width="250dp"
		android:layout_height="80dp">

		<TextView
			android:layout_height="wrap_content"
			android:text="News"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:id="@+id/search_result"
			android:layout_toRightOf="@+id/iv1"
			android:padding="10dp"
			android:textColor="#FEFBFB"/>

		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:src="@drawable/d_news"
			android:paddingTop="5dp"
			android:layout_centerVertical="true"
			android:id="@+id/iv1"/>

	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/btn_vp"
		android:layout_toRightOf="@id/center"
		android:background="@drawable/green"
		android:layout_above="@+id/center"
		android:layout_margin="10dp"
		android:layout_height="80dp"
		android:layout_width="250dp">

		<TextView
			android:layout_height="wrap_content"
			android:text="Vertretungsplan"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:id="@+id/tv2"
			android:layout_toRightOf="@+id/iv2"
			android:layout_centerVertical="true"
			android:padding="10dp"
			android:textColor="#FFFFFF"/>

		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:src="@drawable/d_vp"
			android:paddingTop="5dp"
			android:layout_centerVertical="true"
			android:id="@+id/iv2"/>

	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/btn_termin"
		android:layout_below="@+id/center"
		android:layout_toLeftOf="@+id/center"
		android:layout_margin="10dp"
		android:background="@drawable/blue"
		android:layout_height="800dp"
		android:layout_width="250dp">

		<TextView
			android:layout_height="wrap_content"
			android:text="Termine"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:id="@+id/tv3"
			android:layout_toRightOf="@+id/iv3"
			android:padding="10dp"
			android:textColor="#FFFCFC"/>

		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:src="@drawable/d_termin"
			android:paddingTop="5dp"
			android:layout_centerVertical="true"
			android:id="@+id/iv3"/>

	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/btn_setting"
		android:layout_below="@+id/center"
		android:layout_toRightOf="@+id/center"
		android:layout_margin="10dp"
		android:background="@drawable/black"
		android:layout_width="250dp"
		android:layout_height="800dp">

		<TextView
			android:layout_height="wrap_content"
			android:text="Einstellungen"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:id="@+id/tv4"
			android:layout_toRightOf="@+id/iv4"
			android:padding="10dp"
			android:textColor="#FFFFFF"/>

		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:src="@drawable/d_setting"
			android:paddingTop="5dp"
			android:layout_centerVertical="true"
			android:id="@+id/iv4"/>
		
	</RelativeLayout>

	<TextView
	    android:id="@+id/raumplan"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:text="RaumplÃ¤ne >" />
	
	</RelativeLayout>

</RelativeLayout>